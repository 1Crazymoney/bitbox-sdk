{
  "compileOnSave": true,
  "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "strictNullChecks": true
        
    },
    "include": [
        "src/**/*"
    ],
    "typeRoots": [
        "./node_modules"
    ],
    "types": [
        "axios",
        "bchaddrjs",
        "bitcoincashjs-lib",
        "satoshi-bitcoin",
        "bitcoinjs-message",
        "bitcoin-ops",
        "bs58",
        "bip21",
        "coininfo",
        "bip38",
        "wif"

    ]
}